# .github/workflows/semgrep.yml
name: Semgrep

on:
  pull_request:
  push:
    branches: [ main ]

name: Semgrep Security Scan

on:
  pull_request:
  push:
    branches: [ main ]

jobs:
  semgrep:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      security-events: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Run Semgrep
        uses: returntocorp/semgrep-action@v1
        with:
          config: ".semgrep.yml"

          # Fail the CI job on any ERROR or higher severity
          severity: "ERROR"

          # Strict mode = fail when Semgrep finds any relevant issue
          strict: true

          # Optional: upload SARIF results to GitHub Security tab
          publishToken: ${{ secrets.GITHUB_TOKEN }}
          generateSarif: true

      - name: Upload SARIF results
        if: always()
        uses: github/codeql-action/upload-sarif@v3
        with:
          sarif_file: semgrep.sarif
